{
  "compilerOptions": {
	"target": "esnext",
	"module": "esnext",
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"declaration": true,
	"declarationDir": "./dist/types",
	"outDir": "./dist",
	"sourceMap": true,
	"skipLibCheck": true,
	"isolatedModules": true,
	"moduleResolution": "node",
  "lib": ["esnext", "dom"],  // 导入库类型定义
  "types": ["node"] // 导入指定类型包
  },
  "include": [
	  "src/*"
  ]
}